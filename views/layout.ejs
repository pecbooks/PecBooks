<html>
    <head>
        <title>
            <%= title  %>
        </title>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="<%=assetPath('/css/header.css')%>">
        <link rel="stylesheet" href="<%=assetPath('/css/layout.css')%>">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Festive">
        <script src="<%=assetPath('/js/layout.js')%>"></script>
        <link rel="icon" type="image/png" href="<%=assetPath('/img/bs.png')%>"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquegit ary/3.2.1/jquery.min.js"></script>
        
        <!-- <style>
            body{
                background-color: rgb(45, 203, 243);
            }
        </style> -->
        <%- style %>
        
    </head>

    <body>
        <%- include('_header'); %>

        <%if(flash.success && flash.success.length>0) {%>
            <h5>
                <%flash.success%>
            </h5>
        <%}%>

        <%- body %>

        

        <div id="splash">
            <div id="logo">Pec-Books</div>
            <div id="underc">
            <img src="<%=assetPath('/img/splash.png')%>">
            </div>
            <div id="splash-text">
            <p>Mobile Version Under Construction! <br>
            Kindly open on a larger screen.</p>
            </div>
        </div>

        <%- include('_footer'); %>

        <%- script %>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <script>
            <%if((flash.success)&&(flash.success.length>0)){%>

                new Noty({
                theme: 'relax',
                text: '<%=flash.success%>',
                type: 'success',
                layout: 'topRight',
                timeout: 1500
            }).show();
            <%}else if((flash.error)&&(flash.error.length>0)){%>
                new Noty({
                theme: 'relax',
                text: '<%=flash.error%>',
                type: 'error',
                layout: 'topRight',
                timeout: 1500
                }).show();
            <%}%>
        </script>
        
        
    </body>
</html>